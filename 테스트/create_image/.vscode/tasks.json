{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Streamlit (streamlit_01.py)",
            "type": "shell",
            "command": "C:/Users/sw1/anaconda3/envs/py310_recommand_env/python.exe",
            "args": [
                "-m",
                "streamlit",
                "run",
                "${file}",
